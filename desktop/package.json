{
  "name": "ramppy",
  "version": "1.0.0",
  "description": "Ramppy â€” Plataforma de treinamento de vendas com IA",
  "main": "main.js",
  "scripts": {
    "postinstall": "node patch-electron-cli.js",
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.ramppy.app",
    "productName": "Ramppy",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "bubble.html",
      "bubble.css",
      "bubble.js",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Ramppy",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/installer.nsh"
    }
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^25.0.0"
  }
}
