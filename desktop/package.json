{
  "name": "ramppy",
  "version": "1.0.0",
  "description": "Ramppy â€” Plataforma de treinamento de vendas com IA",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.ramppy.app",
    "productName": "Ramppy",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "bubble.html",
      "bubble.css",
      "bubble.js",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "shortcutName": "Ramppy"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  }
}
